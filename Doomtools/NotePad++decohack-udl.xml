<NotepadPlus>
<UserLang name="DECORATE Bright" ext="decorate txt zs dh deh" udlVersion="2.1">

    <Settings>
        <Global caseIgnored="yes" allowFoldOfComments="yes" foldCompact="no" />
        <Prefix Keywords1="no" Keywords2="no" Keywords3="no" Keywords4="no" Keywords5="no" />
    </Settings>

    <KeywordLists>

        <!-- COMMENTS: force #include to act as a comment -->
        <Keywords name="Comments">00// 01#include 02 03/* 04*/</Keywords>

        <Keywords name="Operators1">! # % &amp; ( ) , . : ; ? { } [ ] ^ | + - * / = &lt; &gt;</Keywords>

        <!-- KEYWORDS1 = Actor -->
        <Keywords name="Keywords1">
Actor
        </Keywords>

        <!-- KEYWORDS2 = include statements (blue) -->
        <Keywords name="Keywords2">
include Include
        </Keywords>

        <!-- KEYWORDS3 = Game Doom States (bright purple) -->
        <Keywords name="Keywords3">
Game Doom States
        </Keywords>

        <!-- KEYWORDS4 = A_ pointers ONLY (bright green-teal) -->
        <Keywords name="Keywords4">
A_JumpIf A_SpawnItem A_SpawnItemEx A_Spawnitemex A_Jump
A_PlaySound A_SetAlpha A_SetHealth A_SetScale A_CustomMissile
A_SpawnProjectile A_SpawnDebris A_NoBlocking A_KillChildren
        </Keywords>

        <!-- KEYWORDS5 = functions like CallACS, random (cyan) -->
        <Keywords name="Keywords5">
CallACS random frandom abs sin cos tan sqrt
        </Keywords>

        <!-- KEYWORDS6 = state labels (bright blue) -->
        <Keywords name="Keywords6">
Spawn Scripted First Two Three Four Last
        </Keywords>

        <Keywords name="Delimiters">
00&quot; 01\ 02&quot; 03' 04\ 05' 06` 07\ 08`
        </Keywords>
    </KeywordLists>

    <Styles>

        <!-- BASE -->
        <WordsStyle name="DEFAULT" fgColor="000000" bgColor="FFFFFF"/>

        <!-- COMMENTS -->
        <WordsStyle name="COMMENTS" fgColor="00BB00" bgColor="FFFFFF"/>
        <WordsStyle name="LINE COMMENTS" fgColor="00FF00" bgColor="FFFFFF"/>

        <!-- NUMBERS -->
        <WordsStyle name="NUMBERS" fgColor="0033FF" bgColor="FFFFFF"/>

        <!-- Actor -->
        <WordsStyle name="KEYWORDS1" fgColor="FF6600" fontStyle="1"/>

        <!-- include/Include -->
        <WordsStyle name="KEYWORDS2" fgColor="0077FF" fontStyle="1"/>

        <!-- Game / Doom / States -->
        <WordsStyle name="KEYWORDS3" fgColor="AA00FF" fontStyle="1"/>

        <!-- A_ pointers -->
        <WordsStyle name="KEYWORDS4" fgColor="00AA99" fontStyle="1"/>

        <!-- CallACS / random -->
        <WordsStyle name="KEYWORDS5" fgColor="00DDFF" fontStyle="1"/>

        <!-- State Labels -->
        <WordsStyle name="KEYWORDS6" fgColor="0033AA" fontStyle="1"/>

        <!-- Strings -->
        <WordsStyle name="DELIMITERS1" fgColor="CC0000"/>
        <WordsStyle name="DELIMITERS2" fgColor="CC0000"/>
        <WordsStyle name="DELIMITERS3" fgColor="CC0000"/>
        <WordsStyle name="DELIMITERS4" fgColor="CC0000"/>

    </Styles>
</UserLang>
</NotepadPlus>
